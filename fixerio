#!/bin/bash

source fixerio_funcs.sh

# style guide: https://google.github.io/styleguide/shell.xml

# fixerio latest|historical

usage() {
  echo "Usage: $0 [-a latest|historical] [-b currency] [-s symbols] [-c yes|no]" 1>&2
  exit 1
}

base="EUR"
symbols=""
color="yes"
while getopts "a:b:s:c:" o; do
    case "${o}" in
        a)
          action=${OPTARG}
          [[ "$action" = "latest" || "$action" = "historical" ]] || usage
          ;;
        b)
          base=${OPTARG}
          ;;
        s)
          symbols=${OPTARG}
          ;;
        c)
          color=${OPTARG}
          [[ "$color" = "yes" || "$color" = "no" ]] || usage
          ;;
        *)
          usage
          ;;
    esac
done
shift $((OPTIND-1))


json=$(latest "$base" "$symbols")

if [[ "$color" = "yes" ]] ; then
  echo $json | jq .
else
  echo $json | jq -M .
fi
